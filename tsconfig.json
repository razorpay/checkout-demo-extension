{
  "compilerOptions": {
    "types": ["node", "svelte", "jest", "@testing-library/jest-dom"],
    "isolatedModules": false,
    "allowJs": true,
    "target": "es2019",
    "lib": ["dom", "ES2019"],
    "module": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "strictNullChecks": true,
    "baseUrl": "app/modules",
    "paths": { "types": ["types"] },
    "incremental": true
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["app/modules/**/*", "./global.d.ts", "app/modules/**/*.d.ts"],
  "exclude": ["node_modules/*", "blackbox/*", "mock-api/*", "vision/*"]
}
