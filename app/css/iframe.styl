#modal-inner {
  background: #fff;
  border-radius: 3px;
  height: 100%;
}

.redeisgn #modal-inner {
  border-radius: 8px;
}

#modal.iframe-active {
  min-width: 895px;
  min-height: 520px;
  width: 70vw !important;
  height: 80vh !important;
  max-width: 1440px;
  max-height: 1060px;
  #content {
    display: none;
  }
  iframe, .payment-frame {
    opacity: 1;
  }
}

#modal.one-cc {
  height: 600px;
  border-radius: 0px;
  color: var(--primary-text-color);
}

@media (min-width: 450px) {
  .redesign #modal.one-cc {
   height: 600px;
  }
}

@media (min-width: 992px) {
  .redesign #modal.one-cc {
   height: 600px;
  }
  .redesign #modal.full-height {
   height: 640px;
   width: 375px;
  }
}

.one-cc > #modal-inner {
  font-family: "Inter", "lato", ubuntu, helvetica, sans-serif !important;
  height: 100% !important;
  border-radius: 8px;
}

.one-cc > #modal-inner > #overlay {
  height: 100% !important;
  border-radius: 8px;
  overflow: hidden;
}

.payment-frame {
  overflow: hidden;
  background: #fff;
  border: 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 101;
  width: 100%;
  height: 100%;
  border-radius: 3px;
  opacity: 0;
  display: none;
  transition: 0.3s;

  iframe {
    opacity: 0;
    transition: 0.3s;
    transition-delay: 0.5s;
    height: calc(100% - 55px);
    border: 0
    margin: 0;
    width: 100%;
  }
}

.iframe-title {
  line-height: 55px;
  padding: 0 16px;
  font-size: 16px;
  border-top: 6px solid;
  text-align: left;
  box-shadow: 0 -1px 6px rgba(0, 0, 0, 0.05) inset;
}

.iframe-close {
  float: left;
  cursor: pointer;
  margin-left: -12px;
  padding: 0 16px
}

.iframe-amount {
  float: right;
  &:before {
    content: 'Pay ';
    font-weight: normal;
  }
}

#one-cc-loader {
  display: flex;
  align-items: center;
  justify-content: center;
}

#one-cc-loader.fixed {
  bottom: 0;
  position: absolute;
  width: 100%;
}
