.options
  border-radius: 2px;
  max-height: 320px;
  overflow: hidden;
  overflow-y: auto;
  background: #fff;
  margin-left: -12px;
  margin-right: -12px;

  .option
    border: 1px solid #E6E7E8;
    border-bottom: none;
    transition: 0.2s background;
    background: #fff;
    padding: 12px 10px;
    font-size: 14px;
    line-height: 20px;
    color: #333333;
    cursor: pointer;
    text-align: left;
    position: relative;

    .option-icon
      position: absolute;
      left: 16px;
      text-align: center;
      width: 20px
      height: 20px;

      i
        font-size: 18px;

      svg
        width: 100%;
        height: 20px;
        max-width: 20px;
        display: inline-block;
        vertical-align: middle;

      img
        height: 20px;
        width: auto;

    &:last-child
      border-bottom: 1px solid #E6E7E8;

    &.next-option
      padding-left: 48px;
      padding-right: 32px;

      &:after
        content: '\e604';
        transform: rotate(180deg);
        font-size: 10px;
        position: absolute;
        right: 16px;
        top: 14px;

      &.up-arrow::after
        transform: rotate(90deg);

      &.down-arrow::after
        transform: rotate(270deg);
        top: 10px;

      .option-title,
      .option-arrow-text
        display: inline-block;
        vertical-align: top;

      .option-arrow-text
        float: right;

    &.dark
      background-color: #F7F7F7;
      padding-left: 48px;

    &.radio-option, &.other-methods
      padding-left: 48px;
      padding-right: 12px;

      &.selected + .option
        border-top: 0;

      .option-title,
      .input-radio
        display: inline-block;
        vertical-align: top;

      .input-radio
        float: right;
        margin-top: -2px;

      .cvv-input
        position: absolute;
        right: 24px;
        top: 8px;
        font-size: 12px;
        -webkit-transition: 0.3s;
        -o-transition: 0.3s;
        transition: 0.3s;
        padding: 5px;
        width: 26px;
        border-bottom: 1px solid #ccc;
