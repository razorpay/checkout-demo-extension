.slotted-radio,
.instrument-strip {
  padding: 12px 16px;
  text-align: left;
  text-align: start;

  .stack {
    align-items: center;

    > div:first-of-type {
      margin-right: 8px;
      overflow: hidden;

      > * {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
      }
    }
  }

  /* Icon styles */
  i {
    display: flex;
    justify-content: center;
    margin-right: 8px;
    min-width: 22px;
    max-width: 22px;
    text-align: center;
    font-size: 18px;
  }

  i svg {
    height: 22px;
    width: auto;
  }

  i img {
    width: 100%;
    height: 100%;
  }

  /* Content styles */
  div[slot='title'] {
    font-size: 1rem;
    line-height: 1.25rem;

    color: #363636;
  }

  div[slot="extra"] {
    margin-top: 2px;
  }
}
