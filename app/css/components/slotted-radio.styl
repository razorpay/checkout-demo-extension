.slotted-radio,
.slotted-option {
  padding: 12px 16px;

  /* Fallback for IE */
  text-align: left;
  text-align: start;

  .stack {
    align-items: center;

    > div:first-of-type {
      margin-right: 8px;
    }
  }

  &.ellipsis {
    .stack {
      > div:first-of-type {
        overflow: hidden;

        > * {
          overflow: hidden;
          white-space: nowrap;
          text-overflow: ellipsis;
        }
      }
    }
  }

  /* Icon styles */
  i[slot='icon'] {
    display: flex;
    justify-content: center;
    margin-right: 8px;
    width: 22px;
    text-align: center;
    font-size: 18px;
    flex-shrink: 0;
    align-items: center;
  }

  i svg, i img {
    height: 22px;
    width: auto;
  }

  /* Content styles */
  div[slot='title'] {
    font-size: 1rem;
    line-height: 1.25rem;

    color: #363636;
  }
}

#content.one-cc {
  .slotted-radio,
  .slotted-option {

    /* Content styles */
    div[slot='title'] {
      font-size: 14px;
      color: var(--secondary-text-color);
    }

    div[slot='subtitle'] {
      color: var(--tertiary-text-color);
    }
  }
}
