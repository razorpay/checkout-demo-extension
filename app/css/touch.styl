@require 'common';

$max-width = 414px;
$max-height = 659px;

$mobile-view() {
  max-width: $max-width;

  * {
    -webkit-touch-callout: none;
    -webkit-text-size-adjust: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  }

  $hidePowered();

  #header,
  #footer,
  .button,
  #emi-inner {
    border-radius: 0;
  }

  &::after {
    content: none;
  }

  .shake {
    animation: none;
  }

  .vertical-pad {
    padding-bottom: 56px;
  }

  #form-netbanking {
    overflow-y: auto;
  }

  // #container and &#container is needed because
  // this function applies to a media query (root)
  // as well as .mobile (ampersand)

  #body.sub,
  #container.one-method #body:not([tab]),
  &#container.one-method #body:not([tab]) {
    #curtain-container-parent {
      bottom: $footerh;
    }

    .callout {
      bottom: $footerh;
    }
  }

  #container #modal #body,
  &#container #modal #body {
    height: $bodyhmobile;
    height: calc(100% - 129px);
    height: calc(100vh - 129px);
    min-height: $bodyhmobile;

    // Reduce height by 24px if timeout banner is shown
    &.has-timeout {
      height: $bodyhmobile - 24px;
      height: calc(100% - 153px);
      height: calc(100vh - 153px);
    }

    &.emi-focus {
      #footer {
        position: fixed;
      }
    }

    &.has-offers {
      .offers-container {
        bottom: 0;
      }

      &[screen] {
        .offers-container {
          bottom: -($topbarh);
        }
      }

      &.sub {
        .offers-container {
          bottom: $footerh - $topbarh;
        }
      }

      .offers-list-container {
        top: 0;
        height: $bodyhmobile + $footerh;
        height: calc(100% - 129px);
        height: calc(100vh - 129px);
      }

      .offers-error {
        // bottom: $footerh;
        bottom: 0;
        // height: $bodyhmobile + $footerh;
        height: 100vh;
      }
    }
  }

  // For just one method, there is a CTA on the home screen
  // But .sub is not present. So, we need to handle the offers strip position separately
  // However, if there is .sub present on #body, it will be handled by itself
  // :not([screen]) ensures this is the home screen
  // :not(.sub) ensures we're not overriding the position for when .sub is present
  #container.one-method,
  &#container.one-method {
    #modal #body.has-offers:not([screen]):not(.sub) .offers-container {
      bottom: $footerh;
    }
  }

  #overlay,
  #error-message,
  #fee-wrap {
    bottom: 0;
  }

  #content {
    height: 100%;
  }

  #emi-wrap {
    width: 100%;
    left: 0;
    margin-left: 0;
    position: absolute;
    bottom: 0;
    height: auto;
    top: auto;
    transform: translateY(15px);

    &::after {
      height: auto;
    }

    .col {
      white-space: normal;
    }

    .em {
      font-size: 14px;
      margin-left: 10px;
    }
  }

  #backdrop {
    display: none;
  }

  #modal {
    background: #fff;
    width: 100%;
    max-width: 100%;
    min-height: 100%;
    margin: 0 auto;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    transform: translateY(7%);
    overflow: hidden;
    &.iframe-active {
      min-width: 0;
      width: 100% !important;
      height: 100% !important;
    }
  }

  #wallets, #upi-apps {
    padding-bottom: $footerh + 12px;
  }

  &.drishy #modal {
    transition: 0.3s ease-out all;
  }

  #payment-options {
    border-bottom: 1px solid $bc;
  }

  .item-inner {
    transform: none;
    opacity: 0;
  }

  .tab-content.drishy .item-inner {
    opacity: 1;
  }

  #footer {
    bottom: 0;
    z-index: 10;
    transform: translateY(100%);

    &.shift-ios {
      bottom: 50px;
    }
  }

  .one-method #modal {
    .recurring-message {
      position: fixed;
      bottom: 72px;
    }
  }

  #card-offer {
    position: fixed;
    bottom: 70px;
  }

  .close {
    font-size: 28px;
    line-height: 28px;
    padding: 6px 12px 12px;
  }


  .payment-frame {
    height: 100%;
    height: 100vh;
  }

  #form-otp #timeout {
    position: fixed;
    bottom: 0;
    transition: 0.3s bottom;
  }

  #body.sub #form-payouts, #form-payout_account {
    padding-bottom: $footerh
  }

  #body.sub #form-otp #timeout {
    bottom: $footerh;
  }

  #body.sub .screen-comp {
    padding-bottom: $footerh;
  }
}

@media (max-device-height: 450px), (max-device-width: 450px) {
  $mobile-view();
}

.mobile {
  $mobile-view();
}

.noanim {
  * {
    transition: none !important;
    animation: none !important;
  }
}

@media (max-height: 767px) {
  $hidePowered();
}

@media (max-device-height: 568px) {
  .ip {
    #body {
      min-height: 310px;
    }
  }
  .grid label {
    height: 73px;
  }
}
