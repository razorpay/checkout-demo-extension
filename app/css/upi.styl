@require 'common';

#cancel_upi {
  display: none;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: inherit;

  p {
    text-align: left;
    padding-left: 50px;
  }

  label {
    text-align: left;
    padding: 3px 0 3px 50px;
    display: block;
    position: relative;
  }

  input[type=radio] {
    display: inline;
    position: absolute;
    left: 20px;
  }

  button {
    margin-top: 10px;
  }
}

#error-message.cancel_upi {
  #cancel_upi {
    display: block;
  }
}