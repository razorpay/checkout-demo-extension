@require 'common';

#ecod-label
  display: none
  margin-top: 10px
.ecod
  &.mobile.test
    &:before
      z-index: 100
      content: 'Test Mode'
      text-decoration: none;
      background: rgb(214, 68, 68)
      border: 1px dashed white
      padding: 3px
      opacity: 1
      transform: rotate(45deg)
      transition: opacity 0.3s ease-in
      font-family: lato, ubuntu, helvetica, sans-serif
      color: white
      position: absolute
      width: 200px
      text-align: center
      right: -50px
      top: 50px
  *
    transition: none !important
  .logged #user:after
    content: none
  #profile
    display: none !important
  #body
    min-height: 432px !important
  #pad-common
    margin-top: 20px
  #ecod-label
    display: block
  #wallets
    border-top: 1px solid $bc
  .item
    width: 33.33% !important
    i
      font-size: 40px
      display: block
      margin: 0px 0 -32px
      padding-top: 10px
    &[tab=ecod]
      border-right: 1px solid $bc
  #footer, #elem-wrap-email
    display: none
  label
    background-repeat: no-repeat !important
    background-size: 54px !important
    background-position: center !important

#ecod-label-upi
  background-image: url('https://cdn.razorpay.com/checkout/upi.svg')

#form-ecod
  font-size: 16px
  img
    display: block
    margin: 0 auto

#share-link
  display: block;
  width: 110px;
  text-align: center;
  margin-top: 20px;