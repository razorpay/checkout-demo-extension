@require 'common';

#ecod-label
  display: none
  margin-top: 10px
.ecod
  &.mobile.test
    &:before
      z-index: 100
      content: 'Test Mode'
      text-decoration: none;
      background: rgb(214, 68, 68)
      border: 1px dashed white
      padding: 3px
      opacity: 1
      transform: rotate(45deg)
      transition: opacity 0.3s ease-in
      font-family: lato, ubuntu, helvetica, sans-serif
      color: white
      position: absolute
      width: 200px
      text-align: center
      right: -50px
      top: 50px
  *
    transition: none !important
  .logged #user:after
    content: none
  #profile
    display: none !important
  #body
    min-height: 432px !important
  #ecod-label
    display: block
  #wallets, #upi-apps
    border-top: 1px solid $bc
    .item .checkbox
      display: none;
  .item
    i
      font-size: 29px
      display: block
  #footer, #elem-wrap-email
    display: none
  label
    background-repeat: no-repeat !important
    background-size: 54px !important
    background-position: center !important

#form-ecod
  font-size: 16px
  img
    display: block
    margin: 0 auto

#share-link
  display: none
  width: 110px;
  text-align: center;
  margin-top: 20px;

#container.test #form-ecod > p:after
  display: block
  opacity: 0.8
  font-size: 12px
  margin-top: 10px
  content: 'Note: Real SMS is not sent in test mode.'
