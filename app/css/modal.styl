@require 'common';

#bottom {
  order: 1;
  margin-top: auto;
  display: flex;
  flex-direction: column;
}

@font-face {
  font-family: 'rzpcvv';
  src: url("data:application/x-font-woff;base64,");
}

.native-otp-bank {
  height: 20px;
  padding-top: 13px !important;
}

.shift-footer-up {
  transform: translateY(-144px) !important;
}

.shift-ssc-up {
  transform: translateY(-10px) !important;
}

.iframe-flow {
  position: relative;
}

.mobile .iframe-flow {
  height: 100%;
  width: 100%;
}

.shift-footer-down {
  transform: translateY(0) !important;
}

.shift-ssc-down {
  transform: translateY(0) !important;
}

h3.title {
  line-height: 1rem;
  text-transform: uppercase;
  color: rgba(51, 51, 51, 0.6);
  margin: 28px 12px 12px;
}

.redesign h3.title {
  margin: 20px 0 12px;
}

textarea {
  resize: none;
}

.clear {
  clear: both;
  overflow: auto;
}

[tabIndex] {
  outline: none;
}

.mfix {
  white-space: nowrap;

  &::after {
    content: '';
    height: 96%;
    display: inline-block;
    width: 0;
    vertical-align: middle;
  }
}

.mchild {
  vertical-align: middle;
  display: inline-block;
  white-space: normal;
}

body, html {
  height: 100%;
  margin: 0;
  -webkit-overflow-scrolling: touch;
  width: 240px;
  min-width: 100%;
}

.double {
  width: 100%;

  .first, .second {
    float: left;
    width: 50%;
  }

  .second {
    float: right;
    text-align: right;
  }
}

.pad {
  padding: 0 24px;
  box-sizing: border-box;
}

.vertical-pad {
  padding-bottom: 12px;
}

#wallets{
  position: relative;
  padding: 12px 0;

  .help {
    left: 12px;
  }
}

#wallets {
  .list .item {
    > label:hover, input[type=radio]:checked + label {
      background-color: transparent;
    }
  }
}

.list, .options {
  .title {
    color: #0C1753;
    font-size: 14px;
    line-height: 18px;
    // font-weight: 600;
  }
}

.option-icon, .list {
  .placeholder, .logo {
    width: 30px;
    height: 30px;
    background-image: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    display: inline-block;
    vertical-align: middle;
    margin: 0 12px 0 5px;
  }
}

.list {
  margin-bottom: 12px;

  & .checkbox:not(.inner-checkbox) {
    border-radius: 50%;

    &::after {
      content: '';
      width: 4px;
      height: 9px;
      border: 1px solid #ccc;
      transition: 0.2s;
      border-left: 0;
      border-top: 0;
      position: absolute;
      transform: rotate(40deg) translate(5px, -2px);
    }
  }

  :checked + label .checkbox:not(.inner-checkbox)::after {
    border-color: #fff;
  }

  input[type=radio]:checked + label {
    background: #fcfcfc;
  }

  .item {
    display: block;
    margin: 0px -12px;
    position: relative;

    &:hover label {
      background: #fcfcfc;
    }

    &:first-child label {
      border-radius: $br $br 0 0;
    }

    &:last-child label {
      border-bottom-color: $bc;
      border-radius: 0 0 $br $br;
    }

    &.active {
      border: 1px solid $bc;
      border-radius: $br;
      padding: 12px 24px;
    }
  }

  label {
    display: block;
    padding: 12px 14px;
    transition: 0.2s;
    border: 1px solid $bc;
    border-bottom-color: transparent;
    position: relative;
    transition: 0.3s;
  }

  &.collapsable {
    label {
      max-height: 30px;
      overflow: hidden;
    }

    input[type=radio]:checked + label {
      max-height: 360px;
    }
  }
}

#partial-list {
  .collapsable-content {
    display: none;
  }

  #partial-radio {
    label {
      overflow: initial;
    }
  }

  input[type=radio]:checked, input[type=checkbox]:checked {
    & + label {
      max-height: 360px;

      .collapsable-content {
        display: block;
      }
    }
  }

  .minimum-amount-select {
    label {
      border: 0;
      padding: 0;
      background: none !important;
    }
  }

  .subtitle {
    margin-top: 0;
  }
}

.subtitle {
  color: rgba(64, 70, 101, 0.7);
  font-size: 12px;
  margin-top: 4px;
  line-height: 18px;
}

.grid {
  text-align: center;

  &.count-1 .item {
    width: 100%;
  }

  &.count-2 .item, &.count-4 .item {
    width: 50%;
  }

  &.count-5 .item:nth-child(5), &.count-7 .item:nth-child(7), &.count-8 .item:nth-child(8) {
    border-right: 1px solid $bc;
    box-sizing: content-box;
  }

  .item {
    cursor: pointer;
    width: 33.33%;
    float: left;
    transition: 0.2s;
    border-bottom: 1px solid $bc;
    border-left: 1px solid $bc;
    box-sizing: border-box;
  }

  label {
    box-sizing: border-box;
    position: relative;
    cursor: inherit;
    height: 86px;
    display: block;
    font-size: 14px;

    &:hover {
      background: $bg;
    }
  }

  img {
    /* IE not accepting click as click on parent label */
    pointer-events: none;
    height: 24px;
    margin-bottom: 3px;
  }
}


.nb-selection-container {
  padding-bottom: 12px;
  transition: 0.3s opacity;

  &.showable {
    height: 0;
    display: block;
    opacity: 0;
  }

  &.showable.drishy {
    height: auto;
    position: static;
    opacity: 1;
  }

  & > label {
    display: block;
    padding-bottom: 4px;
  }
}

.link {
  padding: 3px 1px;
  cursor: pointer;
  font-size: 12px;
  border-bottom: 1px solid;
}

.text-btn {
  text-transform: uppercase;
  font-size: 12px;
  font-weight: bold;
  letter-spacing: 0.5px;
  cursor: pointer;
}

a {
  outline: none;
  color: inherit;
  cursor: pointer;
  text-decoration: none;
}

i {
  font-style: normal;
  opacity: 0;
}

.spin {
  display: none;
  width: 60px;
  height: 60px;
  margin: 0 auto;

  div {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    display: inline-block;
    border-radius: 50%;
    border: 4px solid #29b7d6;
    animation: spin 1.3s linear infinite;
    box-sizing: border-box;
    opacity: 0;
  }
}

.spin2 {
  margin: -60px auto 20px;

  div {
    animation-delay: 0.65s;
  }
}

@keyframes spin {
  0% {
    transform: scale(0.5);
    opacity: 0;
    border-width: 8px;
  }

  20% {
    transform: scale(0.6);
    opacity: 0.8;
    border-width: 4px;
  }

  90% {
    transform: scale(1);
    opacity: 0;
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes methodsLoaderBox {
  0% {
    background-position: -34px 0%;
  }

  100% {
    background-position: 310px 0%;
  }
}

@keyframes methodsLoaderLine {
  0% {
    background-position: 0px 0%;
  }

  100% {
    background-position: 344px 0%;
  }
}

@keyframes methodsLoaderCircle {
  0% {
    background-position: 244px 0%;
  }

  100% {
    background-position: 588px 0%;
  }
}

@keyframes slide {
  100% {
    transform: translate(150px, 0px);
  }
  50% {
    transform: translate(-200px, 0px);
  }
  0% {
    transform: translate(-800px, 0px);
  }
}

 @keyframes loader {
  0% {
    left: 0px;
  }
  100% {
    left: 100%;
  }
}

.loading .spin {
  display: block;
}

#overlay-close {
  font-size: 30px;
  margin: 10px;
}

.omnichannel {
  display: none;
}

.options-list {
  border-radius: 2px;
  box-shadow: 4px 4px 4px 0 rgba(0, 0, 0, 0.04);
  max-height: 320px;
  overflow: hidden;
  overflow-y: auto;
  background: #fff;

  .badge {
    position: absolute;
    display: block;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    margin-right: 8px;
    border: 1px solid #70BE53;
    border-radius: 2px;
    background-color: #F7FBF5;
    color: #70BE53;
    font-size: 10px;
    padding: 0 3px;
    text-transform: uppercase;
    pointer-events: none;
  }

  .option {
    border-top: 1px solid #E6E7E8;
    transition: 0.2s background;
    background: #fff;
    padding: 12px 10px;
    font-size: 14px;
    line-height: 20px;
    color: #333333;
    cursor: pointer;
    text-align: left;
    position: relative;

    &:first-child {
      border-top: 0;
    }
  }
}

#container {
  margin: 0 auto;
  height: 100%;
  text-align: center;
  transition: 0.3s ease-out opacity;
  // transform: translate3d(0, 0, 0);
  z-index: 19999;

  &.drishy {
    opacity: 1;

    #powered-by {
      opacity: 1;
    }

    #powered-by.powered-one-cc  {
      opacity: 0;
    }

    #modal {
      opacity: 1;
      transform: none;
      transition: 0.2s, 0.3s cubic-bezier(0.3, 1.5, 0.7, 1) transform;
    }
  }

  &.notopbar {
    #topbar {
      display: none !important;
    }

    .tab-content {
      margin-top: 0;
    }

    #form-card {
      padding-top: 24px;
    }
  }

  &.emitab {
    #tab-emi {
      display: block;
    }
  }
}

#tab-emi {
  display: none;
}

#backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.font-loaded {
  #modal, #timeout, button, input, textarea, select {
    font-family: $lato;
    font-feature-settings: 'liga' 0;
  }

  #powered-by {
    visibility: visible;
    opacity: 1;
  }

  i {
    opacity: 1;
  }

  .iph {
    display: none;
  }

  #amount i {
    position: static;
  }
}

.redesign.font-loaded {
  #modal, #timeout, button, input, textarea, select {
    font-family: "Inter", "lato", ubuntu, helvetica, sans-serif;
  }
}

#modal {
  border-radius: 3px;
  box-sizing: border-box;
  display: inline-block;
  transition: 0.3s ease-in;
  z-index: 1;
  perspective: 300;
  position: relative;
  opacity: 0;
  transform: scale(0.9);
  color: $col;
  font-size: $size;
  width: 344px;
  font-family: $font;
}

.offers-fade {
  pointer-events: none;
  &::after {
    content: '';
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    position: absolute;
    background: rgba(7, 38, 84, 0.4);
    z-index: 2;
    height: 104px;
  }
}
#content {
  text-align: left;
  white-space: normal;
  display: flex;
  flex-direction: column;

  &.has-discount {
    #header {
      .discount {
        display: inline-block;
      }

      .original-amount {
        font-size: 0.6em;
        text-decoration: line-through;
      }
    }
  }

  &.has-fee {
      .original-amount {
        font-size: 0.6em;
        text-decoration: line-through;
        position: absolute;
        margin-left: 3em;
        bottom: 0;
      }
    }
}


#content.one-click-checkout {
  #logo {
    width: 60px;
    height: 60px;
    line-height: 38px;
  }
}
#content.one-cc {
  height: 100%;

  #merchant-name {
    font-size: 18px;
    font-weight: bold;
    line-height: 22px;
  }

  #merchant-desc {
    font-size: 14px;
    line-height: 17px;
  }

  #amount {
    font-size: 20px;
    margin-top: 5px;
  }

  #body.sub {
    margin-bottom: 0;
  }

  #form {
    display: flex;
    flex-direction: column;
  }

  #form-fields {
    z-index: inherit;
    position: inherit;
  }

  #modal, #timeout, button, input, textarea, select {
    font-family: "Inter", "lato", ubuntu, helvetica, sans-serif;
    font-feature-settings: 'liga' 0;
  }

  .pad {
    padding: 0 16px;
  }

  h3.title, .legend {
    text-transform: capitalize;
    color: var(--primary-text-color);
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-semibold);
    opacity: 1;
    padding-left: 0;
  }

  h3.title {
    margin-top: 0;
    margin-left: 0;
  }

  .legend {
    margin-top: 0;
    padding: 16px 0 10px;
  }

  .text-btn {
    font-weight: 600;
  }

  input[type=checkbox]::before{
    border-radius: 2px;
  }

  .input-radio input[type='radio']:focus:not(:checked) + label .radio-display {
    border-color: var(--primary-color);
  }

  .input-radio input[type='radio']:checked + label .radio-display {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
  }
}

#header {
  border-radius: $br $br 0 0;
  color: #fff;
  background: #fff;
  padding: $p $p 8px;
  overflow: visible;
  max-height: $headerh;
  position: relative;
  z-index: 3;
  flex-shrink: 0;

  &::before, &::after {
    content: '';
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    position: absolute;
    background-image: linear-gradient(to bottom right, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2));
    z-index: -1;
  }

  .discount {
    display: none;
  }

  &::after {
    transition: 0.2s;
    background: none;
  }

  &.offer-fade {
    &::after {
      background: rgba(0,0,0,0.4);
    }
    & + #body #topbar {
      display: none !important;
    }
  }
  &.offer-error {
    &::after {
      background: rgba(0,0,0,0.4);
    }
    & + #body #topbar:after {
      content: '';
      left: 0;
      right: 0;
      bottom: -1px;
      top: 0;
      position: absolute;
      background: rgba(0,0,0,0.4);
    }
  }
}

.close {
  position: absolute;
  right: 0;
  top: 0;
  cursor: pointer;
  font-size: 18px;
  opacity: 0.6;
  width: 24px;
  text-align: center;
  line-height: 26px;
  z-index: 1;

  &:hover {
    opacity: 1;
  }
}

#logo {
  text-align: center;
  position: relative;
  padding: 8px;
  width: 64px;
  height: 64px;
  background: #fff;
  border-radius: $br;
  line-height: 38px;
  float: left;
  margin: 0 14px 16px 0;
  box-shadow: $bs;

  img {
    max-height: 100%;
    max-width: 100%;
  }
}

#merchant {
  white-space: nowrap;
  position: relative;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.12);
  margin-bottom: 10px;
}

#merchant-name {
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 20px;
}

#merchant-desc {
  text-overflow: ellipsis;
  overflow: hidden;
  opacity: 0.8;
}

#amount {
  /**
   * font-size is being auto scaled with Header.updateAmountFontSize() in session.js
   * this was done to fit large number in the header by reducing the size
   * as the characters increased.
   */
  font-size: 24px;
  margin-top: 10px;

  i {
    position: absolute;
  }
}

#powered-by {
  left: 0;
  visibility: hidden;
  opacity: 0;
  width: 100%;
  bottom: 60px;
  display: block;
  font-size: 34px;
  transition: 0.3s;
  position: absolute;
  transition-delay: 0.2s;
  font-family: $lato;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.5);

  a {
    color: #bbb;
    line-height: 30px;
    transition: 0.3s;
    text-decoration: none;

    &:hover {
      color: #ddd;
    }
  }

  &.branded {
    font-size: 14px;
    color: #fff;
    text-shadow: 0 1px 2px rgba(0,0,0,0.4);
    transition: none;
  }
  div.branding {
    background-color: #A5A5A5;
    color: #DDDDDD;
    font-size: 12px;
    border: 1px solid #DDDDDD;
    display: inline-block;
    padding: 12px;
  }
  div.branding img {
    padding: 0px;
    margin-top: 0px;
    margin-left: 12px;
  }
  div.branding img, div.branding span {
    vertical-align: middle;
  }
  img {
    max-width: 200px;
    max-height: 48px;
    margin-top: 8px;
    padding: 8px;
    box-sizing: border-box;
  }

}

.redesign #powered-by {
  font-family: "Inter", "lato", ubuntu, helvetica, sans-serif;
}

#body {
  flex: 1;
  border-radius: 0 0 $br $br;
  height: $bodyh;
  flex-basis: $bodyh;
  background: #fff;
  backface-visibility: none;
  overflow: auto;

  // transition: 0.3s height;
  &.emi-focus {
    position: relative;
    z-index: 10;

    #form-fields {
      z-index: 2;
      background: transparent;
    }
  }
}

#body.sub {
  #footer {
    pointer-events: auto;
    opacity: 1;
    transform: none;
  }

  #form-fields {
    border-radius: 0;
  }
}

#form, #form-fields {
  height: 100%;
}

#root {
  overflow: auto;
}

#root.active {
  height: 100%;
  & + #form-fields {
    display: none;
  }
}

#form-fields {
  position: relative;
  z-index: 1;
  border-radius: 0 0 $br $br;
  background: #fff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

#topbar {
  cursor: pointer;
  background: #fff;
  line-height: $topbarh;
  border-bottom: 1px solid $bc;
  transition: 0.3s transform ease-in 0s, 0.3s opacity ease-in 0s, 0.1s color;
  color: #757575;
  position: absolute;
  left: 0;
  right: 0;
  height: $topbarh;
  z-index: 2;

  img {
    display: block;
    padding-top: 15px;
    width: auto;
    max-height: 20px;
    max-width: 40%;
  }

  &:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    z-index: -1;
  }

  #tab-title img[src*="freecharge.png"] {
    padding-top: 10px;
    max-height: 28.4px;
  }
}

#top-right {
  height: 100%;
  float: right;
}

#top-right, #top-left {
  padding: 0 $p;
  transition: 0.2s;
}

#top-right:hover, #top-left:hover {
  color: #404040;
}

$arrow-height = 10px;
$outline = #ddd;

#profile {
  position: absolute;
  background: #fff;
  border-radius: 2px;
  border: 1px solid $outline;
  top: $topbarh;
  right: 5px;
  margin-top: $arrow-height;
  transition: 0.25s ease-in transform, 0.16s ease-in opacity;
  transform: translateY(-10px);

  li {
    list-style: none;
    padding: 10px;
    font-size: 14px;
    line-height: 19px;

    &:hover {
      background: #f5f5f5;
    }
  }

  li:first-child::before, li:first-child::after {
    content: '';
    top: - $arrow-height;
    right: 15px;
    position: absolute;
    border-width: 0 $arrow-height $arrow-height $arrow-height;
    border-color: transparent transparent $outline;
    border-style: solid;
  }

  li:first-child::after {
    margin-top: 1.5px;
    border-color: transparent transparent #fff;
  }

  li:first-child:hover::after {
    border-color: transparent transparent #f5f5f5;
  }
}

#top-right.logged.focus #profile {
  pointer-events: auto;
  display: block;
  opacity: 1;
  transform: none;
  transition: 0.2s cubic-bezier(0.6, 1.6, 0.8, 1) transform, 0.2s ease-out opacity;
}

#tab-title {
  font-size: 16px;
  line-height: $topbarh + 1px;
  height: $topbarh + 1px;
}

@media (max-width: 320px) {
  #tab-title {
    font-size: 15px
  }
}

.back {
  float: left;
  margin: 0 6px 0 0;
  font-size: 10px;
}

.logged #user:after {
  content: '\e601';
}

#user {
  padding: 0 20px;
  margin: 0 -20px;
  display: none;
  float: right;
  font-size: 12px;
  white-space: nowrap;
  line-height: 46px;
  height: $topbarh;
  margin-top: -4px;

  &::before {
    content: '\e602';
    font-size: 20px;
    margin-right: 6px;
  }

  &::after {
    // content: '\e601';
    font-size: 20px;
    margin-left: 6px;
  }
}

.tab-content {
  margin-top: $topbarh + 1px;
  flex: 1;
  overflow: auto;
  box-sizing: border-box;
  // still need to keep below properties to support
  // position: absolute during animations
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
}

.offers-container {
  order: 1;
  border-top: 1px solid #ebedf0;
}

.offers-list-container, .offers-error {
  z-index: 99;
}

.offers-list-container {
  background-color: #F7F7F7;
  top: 128px;
  bottom: 0;
  left: 0;
  width: 100%;
  position: absolute;
