@require 'common';

.headless-bank {
  height: 20px;
  padding-top: 13px !important;
}

#timeout {
  display: none;
  background: #F6E58D;
  padding: 4px 0;
  font-size: 13px;
  color: #2D3436;
  i {
    margin: 0 5px 0 12px;
    font-size: 18px;
    vertical-align: middle;
  }
}

.clear {
  clear: both;
  overflow: auto;
}

[tabIndex] {
  outline: none;
}

.mfix {
  white-space: nowrap;

  &::after {
    content: "";
    height: 96%;
    display: inline-block;
    width: 0;
    vertical-align: middle;
  }
}

.mchild {
  vertical-align: middle;
  display: inline-block;
  white-space: normal;
}

body,
html {
  height: 100%;
  margin: 0;
  -webkit-overflow-scrolling: touch;
  width: 240px;
  min-width: 100%;
}

.double {
  width: 100%;

  .first,
  .second {
    float: left;
    width: 50%;
  }
  .second {
    float: right;
    text-align: right;
  }
}

.pad {
  padding: 0 24px;
  box-sizing: border-box;
}

.vertical-pad
  padding-bottom: 12px;

.has-offers
  .vertical-pad
    padding-bottom: 44px;

#wallets, #upi-apps {
  position: relative;
  padding: 12px 0;
  .help {
    left: 12px;
  }
}

#wallets {

  .list .item {

    > label:hover, input[type=radio]:checked + label {

      background-color: transparent;
    }
  }
}

.list, .options {
  .title {
    color: #0C1753;
    font-size: 14px;
    line-height: 18px;
    font-weight: 600;
  }
}

.list {
  margin-bottom: 12px;

  & .checkbox:not(.inner-checkbox) {
    border-radius: 50%;

    &::after {
      content: '';
      width: 4px;
      height: 9px;
      border: 1px solid #ccc;
      transition: 0.2s;
      border-left: 0;
      border-top: 0;
      position: absolute;
      transform: rotate(40deg) translate(5px, -2px);
    }
  }

  .placeholder, .logo {
    width: 30px;
    height: 30px;
    background-image: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    display: inline-block;
    vertical-align: middle;
    margin: 0 12px 0 5px;
  }

  :checked + label .checkbox:not(.inner-checkbox)::after {
    border-color: #fff
  }

  input[type=radio]:checked + label {
    background: #fcfcfc;
  }

  .item {
    display: block;
    margin: 0px -12px;
    position: relative;

    &:hover label {
      background: #fcfcfc;
    }

    &:first-child label {
      border-radius: $br $br 0 0;
    }

    &:last-child label {
      border-bottom-color: $bc;
      border-radius: 0 0 $br $br;
    }

    &.active {
      border: 1px solid $bc;
      border-radius: $br;
      padding: 12px 24px;
    }
  }

  label {
    display: block;
    padding: 12px 14px;
    transition: 0.2s;
    border: 1px solid $bc;
    border-bottom-color: transparent;
    position: relative;
    transition: 0.3s;
  }

  &.collapsable {
    label {
      max-height: 30px;
      overflow: hidden;
    }

    input[type=radio]:checked + label {
      max-height: 360px;
    }
  }
}

#partial-list {
  .collapsable-content {
    display: none;
  }

  #partial-radio {
    label {
      overflow: initial;
    }
  }

  input[type=radio]:checked,
  input[type=checkbox]:checked {
    & + label {
      max-height: 360px;

      .collapsable-content {
        display: block;
      }
    }
  }

  .minimum-amount-select {
    label {
      border: 0;
      padding: 0;
      background: none !important;
    }
  }

  .subtitle {
    margin-top: 0;
  }
}

.subtitle {
  color: rgba(64,70,101,0.7);
  font-size: 12px;
  margin-top: 4px;
  line-height: 18px;
}

.grid {
  text-align: center;

  &.count-1 .item {
    width: 100%;
  }

  &.count-2 .item, &.count-4 .item {
    width: 50%;
  }

  &.count-5 .item:nth-child(5),
  &.count-7 .item:nth-child(7),
  &.count-8 .item:nth-child(8) {
    border-right: 1px solid $bc;
    box-sizing: content-box;
  }

  .item {
    cursor: pointer;
    width: 33.33%;
    float: left;
    transition: 0.2s;
    border-bottom: 1px solid $bc;
    border-left: 1px solid $bc;
    box-sizing: border-box;
  }

  label {
    box-sizing: border-box;
    position: relative;
    cursor: inherit;
    height: 86px;
    display: block;
    font-size: 14px;

    &:hover {
      background: $bg;
    }
  }

  img {
    /* IE not accepting click as click on parent label */
    pointer-events: none;
    height: 24px;
    margin-bottom: 3px;
  }
}

#netb-banks .item {
  overflow: hidden;
}

.nb-selection-container {

  padding-bottom: 12px;
  transition: .3s opacity;

  &.showable {
    height: 0;
    display: block;
    opacity: 0;
  }

  &.showable.drishy {
    height: auto;
    position: static;
    opacity: 1;
  }

  & > label {
    display: block;
    padding-bottom: 4px;
  }

}

.link {
  padding: 3px 1px;
  cursor: pointer;
  font-size: 12px;
  border-bottom: 1px solid;
}

.text-btn {
  text-transform: uppercase;
  font-size: 12px;
  font-weight: bold;
  letter-spacing: 0.5px;
  cursor: pointer;
}

a {
  outline: none;
  color: inherit;
  cursor: pointer;
  text-decoration: none;
}

i {
  font-style: normal;
  opacity: 0;
}

.spin {
  display: none;
  width: 60px;
  height: 60px;
  margin: 0 auto;

  div {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    display: inline-block;
    border-radius: 50%;
    border: 4px solid #29b7d6;
    animation: spin 1.3s linear infinite;
    box-sizing: border-box;
    opacity: 0;
  }
}

.spin2 {
  margin: -60px auto 20px;
  div {
    animation-delay: 0.65s;
  }
}

@keyframes spin {
  0% {
    transform: scale(0.5);
    opacity: 0;
    border-width: 8px;
  }

  20% {
    transform: scale(0.6);
    opacity: 0.8;
    border-width: 4px;
  }

  90% {
    transform: scale(1);
    opacity: 0;
  }
}

@keyframes rotate {
  from {
    transform:rotate(0deg);
  }
  to {
    transform:rotate(360deg);
  }
}

.loading .spin {
  display: block;
}

#options-wrap {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 12px;
  right: 12px;
  z-index: 100;
}

.selector {
  padding-bottom: 6px;
  cursor: pointer;
  white-space: nowrap;
  padding-right: 10px;
  box-sizing: border-box;

  &:hover, &.focused {
    &::after {
      transform: scale(1);
    }
  }

  input {
    display: none;
  }

  .overflow-parent {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .help {
    white-space: normal;

    &.up {
      margin-bottom: 12px
    }
  }

  &.disabled {
    .text.theme-highlight {
      color: #858585;
    }
  }

  &.invalid.mature:not(.focused) .text {
    color: $danger;
  }

  .text, i, .overflow-parent {
    pointer-events: none;
  }
}

.options-list {
  border-radius: 2px;
  box-shadow: 4px 4px 4px 0 rgba(0,0,0,0.04);
  max-height: 320px;
  overflow: hidden;
  overflow-y: auto;
  background: #fff;

  .badge {
    position: absolute;
    display: block;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    margin-right: 8px;
    border: 1px solid #70BE53;
    border-radius: 2px;
    background-color: #F7FBF5;
    color: #70BE53;
    font-size: 10px;
    padding: 0 3px;
    text-transform: uppercase;
    pointer-events: none;
  }


  .option {
    border-top: 1px solid #E6E7E8;
    transition: 0.2s background;
    background: #fff;
    padding: 12px 10px;
    font-size: 14px;
    line-height: 20px;
    color: #333333;
    cursor: pointer;
    text-align: left;
    position: relative;

    &:first-child {
      border-top: 0;
    }
  }
}

#container {
  margin: 0 auto;
  height: 100%;
  text-align: center;
  transition: 0.3s ease-out opacity;
  // transform: translate3d(0, 0, 0);
  z-index: 19999;

  &.drishy {
    opacity: 1;

    #powered-by {
      opacity: 1;
    }

    #modal {
      opacity: 1;
      transform: none;
      transition: 0.2s, 0.3s cubic-bezier(0.3, 1.5, 0.7, 1) transform;
    }

    &.rerender #modal {
      transition: none;
    }
  }

  &.notopbar {
    #topbar {
      display: none!important;
    }

    .tab-content {
      top: 0;
    }

    #form-card {
      padding-top: 24px;
    }
  }

  &.emitab {
    #tab-emi {
      display: block;
    }
  }
}

#tab-emi {
  display: none;
}

#backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.font-loaded {
  #modal,
  #timeout,
  button,
  input,
  textarea,
  select {
    font-family: $lato;
    font-feature-settings: "liga" 0;
  }

  #powered-by {
    visibility: visible;
    opacity: 1;
  }

  i {
    opacity: 1;
  }

  .iph {
    display: none;
  }

  #amount i {
    position: static;
  }
}

#modal {
  border-radius: 3px;
  box-sizing: border-box;
  display: inline-block;
  transition: 0.3s ease-in;
  z-index: 1;
  perspective: 300;
  position: relative;
  opacity: 0;
  transform: scale(0.9);
  color: $col;
  font-size: $size;
  width: 344px;
  font-family: $font;
}

#content {
  text-align: left;
  white-space: normal;

  &.has-discount {

    #header {

      .discount {

        display: inline-block;
      }

      .original-amount {

        font-size: 0.6em;
        text-decoration: line-through;
      }
    }

    #footer {

      .original-amount {

        display: none;
      }

      .discount {

        display: inline-block;
      }
    }
  }
}

#header {
  border-radius: $br $br 0 0;
  color: #fff;
  background: #fff;
  padding: $p;
  overflow: hidden;
  max-height: $headerh;
  position: relative;
  z-index: 3;

  &::before {
    content: "";
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    position: absolute;
    background-image: linear-gradient(to bottom right, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2));
  }

  .discount {

    display: none;
  }
}

#footer {

  .discount {

    display: none;
  }
}

.close {
  position: absolute;
  right: 0;
  top: 0;
  cursor: pointer;
  font-size: 18px;
  opacity: 0.6;
  width: 24px;
  text-align: center;
  line-height: 26px;
  z-index: 1;
  &:hover {
    opacity: 1;
  }
}

#logo {
  text-align: center;
  position: relative;
  padding: 8px;
  width: 64px;
  height: 64px;
  background: #fff;
  border-radius: $br;
  line-height: 62px;
  float: left;
  margin-right: $p;
  box-shadow: $bs;

  img {
    vertical-align: middle;
    max-height: 100%;
    max-width: 100%;
  }
}

#merchant {
  white-space: nowrap;
  position: relative;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.12);
}

#merchant-name {
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 20px;
}

#merchant-desc {
  text-overflow: ellipsis;
  overflow: hidden;
  opacity: 0.8;
}

#amount {
  font-size: 24px;
  margin-top: 10px;

  i {
    position: absolute;
  }
}

#powered-by {
  left: 0;
  visibility: hidden;
  opacity: 0;
  width: 100%;
  bottom: 60px;
  display: block;
  font-size: 34px;
  transition: 0.3s;
  position: absolute;
  transition-delay: 0.2s;
  font-family: $lato;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.5);

  a {
    color: #bbb;
    line-height: 30px;
    transition: 0.3s;
    text-decoration: none;

    &:hover {
      color: #ddd;
    }
  }
}

#body {
  border-radius: 0 0 $br $br;
  height: $bodyh;
  background: #fff;
  backface-visibility: none;
  // transition: 0.3s height;

  &.emi-focus {
    position: relative;
    z-index: 10;

    #form-fields {
      z-index: 2;
      background: transparent;
    }
  }

  &[screen=otp] {
    .otp-btn {
      opacity: 1;
    }
    .pay-btn {
      opacity: 0;
    }
  }
}

#body.sub, #container.one-method #body:not([tab]) {
  #footer {
    pointer-events: auto;
    opacity: 1;
    transform: none;
  }
  #form-fields {
    border-radius: 0;
  }

  .callout {
    bottom: $footerh;
  }
}

#form,
#form-fields {
  height: 100%;
}

#form-fields {
  position: relative;
  z-index: 1;
  border-radius: 0 0 $br $br;
  background: #fff;
}

#partial-back {
  padding: 0 24px;
  z-index: 3;
}

#topbar, #partial-back {
  display: none;
  cursor: pointer;
  background: #fff;
  line-height: $topbarh;
  border-bottom: 1px solid $bc;
  transition: 0.3s transform ease-in 0s, 0.3s opacity ease-in 0s, 0.1s color;
  color: #757575;
  position: absolute;
  left: 1px;
  right: 1px;
  height: $topbarh;
  z-index: 2;

  img {
    display: block;
    padding-top: 15px;
  }

  &:before {

    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    z-index: -1;
  }
}

#top-right {
  height: 100%;
  float: right;
}

#top-right,
#top-left {
  padding: 0 $p;
  transition: 0.2s;
}

#top-right:hover,
#top-left:hover {
  color: #404040;
}

$arrow-height = 10px;
$outline = #ddd;

#profile {
  position: absolute;
  background: #fff;
  border-radius: 2px;
  border: 1px solid $outline;
  top: $topbarh;
  right: 5px;
  margin-top: $arrow-height;
  display: none\9;
  pointer-events: none;
  opacity: 0;
  transition: 0.25s ease-in transform, 0.16s ease-in opacity;
  transform: translateY(-10px);

  li {
    list-style: none;
    padding: 10px;
    font-size: 14px;
    line-height: 19px;

    &:hover {
      background: #f5f5f5;
    }
  }

  li:first-child::before,
  li:first-child::after {
    content: '';
    top: - $arrow-height;
    right: 15px;
    position: absolute;
    border-width: 0 $arrow-height $arrow-height $arrow-height;
    border-color: transparent transparent $outline;
    border-style: solid;
  }

  li:first-child::after {
    margin-top: 1.5px;
    border-color: transparent transparent #fff;
  }

  li:first-child:hover::after {
    border-color: transparent transparent #f5f5f5;
  }
}

#top-right.logged.focus #profile {
  pointer-events: auto;
  display: block;
  opacity: 1;
  transform: none;
  transition: 0.2s cubic-bezier(0.6, 1.6, 0.8, 1) transform, 0.2s ease-out opacity;
}

#tab-title {
  font-size: 16px;
  line-height: $topbarh + 1px;
  height: $topbarh + 1px;
}

.back {
  float: left;
  margin: 0 6px 0 0;
  font-size: 10px;
}

.logged #user:after {
  content: "\e601";
}

#user {
  padding: 0 20px;
  margin: 0 -20px;
  display: none;
  float: right;
  font-size: 12px;
  white-space: nowrap;
  line-height: 46px;
  height: $topbarh;

  &::before {
    content: '\e602';
    font-size: 20px;
    margin-right: 6px;
  }
  &::after {
    // content: '\e601';
    font-size: 20px;
    margin-left: 6px;
  }
}

.tab-content {
  top: $topbarh + 1px;
  left: 0;
  width: 100%;
  bottom: 0;
  background: #fff;
  z-index: 4;
  border-radius: 3px;
}

#offers-container {

  display: none;
  width: 100%;
  position: absolute;
  left: 0;
  height: $topbarh;
  line-height: $topbarh;
  z-index: -1;
  box-sizing: border-box;
  transform: none;
  transition: 0.3s transform ease-in 0s, 0.3s opacity ease-in 0s, 0.1s color;
  border-top: 1px solid #ebedf0;

  .offers-content {

    position: relative;
    height: 100%;

    .single-offer-text {

      display: none;
      max-width: 250px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }

    &.single-offer {

      .multi-offer-el {

        display: none;
      }

      .single-offer-text {

        display: inline-block;
      }
    }

    .offers-title {

      height: 100%;
      cursor: pointer;
      position: relative;

      > span.offer-icon {

        position: absolute;
        font-size: 20px;
        transform: translate(-4px, 21px);
        line-height: 0
      }

      .select-offer, .selected-offer {

        height: 100%;
        overflow: hidden;
        padding-left: 1.57em;

        > span {

          line-height: 1;
          display: inline-block;
          padding-top: 15px;

          &.toggle {

            display: block;
            height: $topbarh - 1px;
            position: relative;
            padding-right: 15px;
            box-sizing: border-box;

            &:after {

              content: "\e601";
              display: block;
              font-size: 20px;
              line-height: 1em;
              position: absolute;
              top: 50%;
              right: 0;
              transform: translate(0, -50%) rotate(180deg);
              margin-top: 5px;
            }
          }
        }
      }

      .selected-offer {

        display: none;

        .discount-text {

          color: #70be53;
        }
      }

      &.applied {

        .selected-offer {

          display: block;
        }

        .select-offer {

          display: none;
        }
      }
    }

    .offers-title {

      padding: 0 $p;
    }
  }
}

.offers-list-container, .offers-error {

  z-index: 99;
}

.offers-list-container {

  background-color: #F7F7F7;
  height: $bodyh + $footerh;
  transform: translate(0, -100%);
  position: relative;
  top:  $footerh + 1px;
  transition: 0.3s transform ease-in 0s, 0.3s opacity ease-in 0s, 0.1s color;
  padding-top: $topbarh;
  padding-bottom: 8px;
  box-sizing: border-box;
  border-radius: 0 0 3px 3px;
  line-height: $topbarh;

  &.selected {

    padding-bottom: $footerh;
  }

  .offers-list-title {

    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    padding: 0 $p;
    color: rgba(51, 51, 51, 0.6);
    overflow: hidden;
    cursor: pointer;
    box-sizing: border-box;

    &:after {

      content: "\e601";
      display: block;
      float: right;
      font-size: 20px;
    }
  }

  button.apply-offer {

    display: none;
  }

  &.selected button.apply-offer {

    display: block;
  }

  ul.offers-list {

    margin: 0;
    padding: 0 8px;
    list-style-type: none;
    height: 100%;
    overflow-y: auto;

    > li.offer {

      display: block;
      border: 1px solid #E6E7E8;
      border-radius: 1px;
      padding: 0 16px;
      background-color: #fff;
      margin: 0;
      cursor: pointer;
      border-top-width: 0;
      position: relative;

      &:first-child, &.selected {

        border-top-width: 1px;
      }

      .offer-title {

        overflow: hidden;

        .checkbox {

          vertical-align: middle;
        }
      }

      .offer-details {

        line-height: 1.5rem;
        font-size: 13px;
        color: #666666;

        &.no-desc .remove-offer {

          margin-top: 0;
        }
      }

      .offer-details, &.selected .offer-details.no-desc, .remove-offer {

        display: none;
      }

      .remove-offer {

        margin-top: 16px;
      }

      &.selected .offer-details,
      &.selected.applied .offer-details.no-desc,
      &.applied .remove-offer {

        display: block;
      }

      .discount-details {

        color: rgb(112,190,83);
        margin-bottom: 2px;
      }

      &.selected {

        top: -1px;

        &:first-child {

          top: 0;
        }

        .offer-details {

          border-top: 1px solid #E6E7E8;
          padding-top: 8px;
          margin-bottom: 16px;
        }

        .offer-title .checkbox:after {

          border-color: #fff;
        }
      }
    }
  }

  button.apply-offer {

    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    border-radius: 0 0 3px 3px;
    font-weight: normal;
  }
}

.offers-error {

  top: $footerh;
  height: $bodyh + $footerh;
  overflow: hidden;
  background-color: rgba(0,0,0,0.3);
  position: relative;
  transform: translate(0, -100%);
  border-radius: 0 0 3px 3px;
