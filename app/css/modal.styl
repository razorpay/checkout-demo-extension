  box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.24);

  &::after {
    top: 0;
    content: '';
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    transition: 0.2s;
    opacity: 1;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.1));
    pointer-events: none;
  }

  &:hover::after {
    opacity: 0;
