    position: absolute;
    border-radius: 6px;
    width: 100%;
    height: 45px;
    content: '';
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.1),
      rgba(0, 0, 0, 0.1)
    );
  }

  &:hover::after {
    opacity: 0;
  }
}

#footer, .submit-button {
  cursor: pointer;
  opacity: 0;
  position: absolute;
  left: 0;
  bottom: - $footerh + 1px;
  width: 100%;
  border-radius: 0 0 $br $br;
  height: $footerh;
  line-height: $footerh + 1px;
  transition: 0.3s transform, 0.3s opacity;
  transform: translateY(-100%);
  text-align: center;
  font-weight: normal;
  text-transform: uppercase;
  font-size: 16px;
  box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.24);

  &::after {
    top: 0;
    content: '';
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    transition: 0.2s;
    opacity: 1;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.1));
    pointer-events: none;
  }

  &:hover::after {
    opacity: 0;
  }

  & > span {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: 0.3s;
    opacity: 0;
  }

  > span:last-child {
    opacity: 1;
  }
}

