@require 'common';

$top = 28px;
$left = 0;
$bottom = 7px;

.fieldset {
  padding: 0 $p;
}

label[for] {
  cursor: pointer;
}

.elem-wrap {
  height: 72px;

  &.third {
    float: left;
    width: 33.33%;

    .elem {
      margin-left: 20px;
    }
  }

  &.two-third {
    float: left;
    width: 66.66%;
  }
}

.elem {
  color: $input-unfocused;
  border-bottom: 1px solid $bc;
  position: relative;

  &.readonly {
    border-bottom: 1px dashed #ccc;
    .input {
      opacity: .7 !important;
      pointer-events: none;
    }
  }
  &.focused {
    color: $input-focused;
  }
  &.invalid.mature:not(.focused) {
    color: $danger;
  }

  input {
    opacity: 0;
  }

  i {
    position: absolute;
    font-size: 20px;
    bottom: 6px;
    right: 0;
    color: #8f8f8f;
  }

  label {
    transform-origin: 0 0;
    color: #757575;
    position: absolute;
    top: $top;
    left: $left;
    z-index: 1;
    pointer-events: none;
    white-space: nowrap;
  }
}

#elem-card .amex-error {
  display: none;
}

#elem-card.noamex {
  .help {
    display: none;
  }
  &.focused.invalid.mature .amex-error {
    display: block;
  }
}

.font-loaded .elem label {
  transition: 0.3s;
}

.filled,
.focused {
  label {
    transform: scale(0.86) translateY(-20px);
  }

  input,
  .input-prefix {
    opacity: 1;
  }
}

.input {
  transition: 0.3s;
  font-size: inherit;
  border: none;
  outline: none;
  background: none;
  display: block;
  width: 100%;
  line-height: 19px;
  padding: $top 0 $bottom $left;
  margin: 0;
  position: relative;
  color: inherit;
}

.select {
  padding: 20px 0 0;

  select {
    cursor: pointer;
    appearance: none;
    text-indent: 1px;
    text-overflow: ellipsis;
    padding: 7px 0;
  }
}

select option {
  width: inherit;
}

.select-arrow {
  pointer-events: none;
}

input[type=checkbox] {
  display: none;
  appearance: none;
}

.checked .checkbox::after,
:checked + .checkbox::after {
  content: "";
  width: 7px;
  height: 3px;
  position: absolute;
  top: 3px;
  left: 2px;
  border: 3px solid #fff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
}

.checkbox {
  vertical-align: middle;
  display: inline-block;
  position: relative;
  top: -1px;
  width: 14px;
  height: 14px;
  margin-right: 5px;
  cursor: pointer;
  background: #fff;
  border: 1px solid #ccc;
  transition: 0.2s;
  border-radius: $br;
}

input[type=radio] {
  display: none;
}

input[type=radio]:checked + label {
  background: $bgd;

  .item-inner {
    top: 1px;
  }
}

input {
  background: none;
  border: none;
  outline: none;
}

button {
  cursor: pointer;
  background: none;
  border: none;
  outline: none;
}

@media screen and (min-width: 0\0) {
  .help {
    display: none;
  }

  .focused.invalid.mature .help {
    display: block;
  }
}

.elem-cvv .help {
  width: 130px
  left: auto
  right: -10px
  &:before {
    content: "It's a 3 digit code printed on the back of your card."
  }
  &:after {
    left: auto;
    right: 50px;
  }
}

#card_cvv:not(.amex) + .help {
  padding-left: 60px
  background-image: url('data:image/svg+xml;base64,');
  background-size: 44px 28px;
  background-position: 10px center;
  background-repeat: no-repeat;
}

#card_cvv.maestro + .help {
  display: none
}

#card_cvv.amex + .help {
  &:before {
    content: "It's a 4 digit code printed on your card."
  }
}

.dropdown,
.help {
  display: none\9;
  pointer-events: none;
  opacity: 0;
  transform: translateY(10px);
  transition: 0.25s ease-in transform, 0.16s ease-in opacity;
}

#wallets.invalid .help,
.dropdown-parent:focus .dropdown,
.dropdown-parent.focus .dropdown,
.focused.invalid.mature .help {
  pointer-events: auto;
  display: block;
  opacity: 1;
  transform: none;
  transition: 0.2s cubic-bezier(0.6, 1.6, 0.8, 1) transform, 0.2s ease-out opacity;
}

.help {
  transform: translateY(-10px);
  color: #fff;
  font-weight: bold;
  position: absolute;
  line-height: 16px;
  padding: 8px 12px;
  font-size: 12px;
  background: #555;
  box-shadow: rgba(0, 0, 0, 0.05) 1px 1px 2px 0;
  z-index: 3;
  border-radius: $br;
  top: 100%;
  margin-top: 10px;
  pointer-events: none !important;

  &::after {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    border-width: 5px;
    border-style: solid;
    border-color: transparent transparent #555;
    bottom: 100%;
    left: 20px;
    margin: 0 0 -1px -10px;
  }

  &.up {
    top: auto;
    bottom: 100%;
    margin-bottom: -15px;

    &::after {
      border-color: #555 transparent transparent;
      top: 100%;
    }
  }
}

.btn {
  cursor: pointer;
  border-radius: 2px;
  background: $pri;
  line-height: 40px;
  color: #fff;
  padding: 0 16px;
  font-weight: bold;
  letter-spacing: 0.25px;
  text-transform: uppercase;
  &:hover {
    background-image: linear-gradient(transparent,rgba(0,0,0,.05) 40%,rgba(0,0,0,.1));
  }
  &:active {
    box-shadow: 0 0 0 1px rgba(0,0,0,.15) inset,0 0 6px rgba(0,0,0,.2) inset;
  }
}

#card_cvv,
.saved-cvv {
  -webkit-text-security: disc;
}

.input-prefix {
  position: absolute;
  bottom: 8px;
  opacity: 0;
  transition: 0.3s;
  & + .input {
    padding-left: 10px;
  }
}

.customer-bank-details {
  .bank-name {
    margin-left: -24px;
    margin-right: -24px;
    padding: 15px 22px;
    background-color: #fafafa;
    border-bottom: 1px solid #f1f1f1;
    color: #555;

    > img {
      width: 15px;
      height: 15px;
      float: right;
      margin-top: 3px;
    }
  }

  .account-details {
    margin-top: 15px;

    > div {
      float: left;

      &:first-child {
        width: 35%;
      }

      &:last-child {
        width: 65%;
        text-align: right;
      }
    }
  }
}

#nocvv-check {
  display: none;
  line-height: 20px;
  cursor: pointer;
  margin-bottom: 10px;
  &.drishy {
    display: block;
  }
}

#form-card.nocvv {
  .elem-wrap.third {
    display: none;
  }
  .elem-wrap.two-third {
    width: 100%;
  }
}
