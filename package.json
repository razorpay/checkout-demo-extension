  "name": "checkout-js",
  "description": "Internal package for the Razorpay Checkout JavaScript",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:razorpay/checkout.git"
  },
  "scripts": {
    "test:unit": "./rollup.test.js | tap-difflet",
    "jest:base": "jest blackbox/tests/homescreen/**/base.test.js --testTimeout=30000",
    "jest": "jest blackbox/tests/homescreen/ --testTimeout=30000",
    "test": "npm run test:unit && npm run build && npm run jest",
    "lint-fix": "$ lintFix app/modules",
    "build": "$ rollup -c --environment prod && $ gulp && $ lintOutput app/js/generated/entry",
    "start": "$ gulp watch",
    "clean": "$ ./scripts/clean.sh"
  },
  "bugs": {
    "url": "https://github.com/razorpay/checkout/issues"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "fe": "git+https://github.com/razorpay/common-frontend-utils.git#d9496d8",
    "gulp": "^4.0.0",
    "gulp-stylus": "^2.7.0",
    "gulp-usemin": "^0.3.29",
    "istanbul": "^0.4.5",
    "jest": "^24.9.0",
    "jshint": "2.11.0",
    "jshint-stylish": "^2.2.1",
    "puppeteer": "^2.1.1",
    "rollup-plugin-coverage": "^0.1.4",
    "rollup-plugin-svelte": "^5.1.0",
    "run-sequence": "^2.2.1",
    "svelte": "^3.12.1",
    "tap-difflet": "^0.7.1",
    "testdouble": "^3.12.5",
    "through": "^2.3.8",
    "through2": "^2.0.3"
  },
  "private": true,
  "devDependencies": {
    "husky": "^1.0.0-rc.14",
    "jest-circus": "^24.9.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "pretty-quick": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --plugin-search-dir=. --staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "$ lintFix"
    ]
  }
}
