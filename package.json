  "name": "checkout-js",
  "description": "Internal package for the Razorpay Checkout JavaScript",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:razorpay/checkout.git"
  },
  "scripts": {
    "start": "NODE_ENV=dev gulp watch",
    "dev-start": "API_SERVER=localhost nodemon server & npm start",
    "live-start": "API_SERVER=https://api.razorpay.com nodemon server & npm start",
    "start:no-reload": "gulp watch",
    "build": "rollup -c --environment prod && gulp && npm run testC",
    "lint-fix": "lintFix app/modules",
    "clean": "./scripts/clean.sh",
    "jest:base": "jest blackbox/tests/homescreen/**/base.test.js",
    "jest:custom": "jest blackbox/tests/custom/**/*.test.js",
    "jest": "jest blackbox/tests/homescreen --testPathIgnorePatterns ersonalization",
    "jest:p13n": "jest blackbox/tests/homescreen/**/*ersonalization*.test.js --runInBand",
    "test:all": "npm run test:unit && npm run build && npm run jest && npm run jest:custom",
    "test:base": "npm run test:unit && npm run build && npm run jest:base",
    "test:unit": "./rollup.test.js | tap-difflet",
    "test": "npm run test:all",
    "testC": "node ./cfu/scripts/lintOutput.js app/js/generated/entry"
  },
  "bugs": {
    "url": "https://github.com/razorpay/checkout/issues"
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-proposal-pipeline-operator": "^7.14.5",
    "@babel/plugin-transform-spread": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "@rollup/plugin-node-resolve": "7.1.3",
    "autoprefixer-stylus": "^1.0.0",
    "babel-eslint": "^10.0.2",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.1",
    "cors": "^2.8.5",
    "eslint": "^7.30.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "express": "^4.17.1",
    "fast-async": "^7.0.6",
    "gulp": "^4.0.0",
    "gulp-stylus": "^2.7.0",
    "gulp-usemin": "^0.3.29",
    "http-proxy-middleware": "^2.0.1",
    "istanbul": "^0.4.5",
    "jest": "^27.0.3",
    "jshint": "^2.13.0",
    "jshint-stylish": "^2.2.1",
    "nodemon": "^2.0.7",
    "puppeteer": "^2.1.1",
    "rollup": "^1.21.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-coverage": "^0.1.4",
    "rollup-plugin-includepaths": "^0.2.3",
    "rollup-plugin-inject": "^3.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "5.2.1",
    "run-sequence": "^2.2.1",
    "stylus": "^0.54.7",
    "svelte": "^3.20.1",
    "svelte-i18n": "^3.0.4",
    "tap-difflet": "^0.7.1",
    "testdouble": "^3.16.1",
    "through": "^2.3.8",
    "through2": "^2.0.3",
    "uglify-js": "^3.13.10"
  },
  "private": true,
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "husky": "^6.0.0",
    "jest-circus": "^27.0.6",
    "lint-staged": "^11.0.0",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^2.3.1",
    "pretty-quick": "^2.0.2",
    "rollup-plugin-livereload": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --plugin-search-dir=. --staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "$ lintFix"
    ]
  },
  "bin": {
    "lintFix": "./cfu/scripts/lintFix.js",
    "lintOutput": "./cfu/scripts/lintOutput.js"
  }
}
